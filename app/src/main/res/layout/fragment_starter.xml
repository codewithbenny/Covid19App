<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Starter">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">



        <RelativeLayout
           android:layout_width="match_parent"
           android:background="@drawable/wear_mask"
            android:layout_weight="1"
            android:layout_height="0dp"
            >
           <ImageView
               android:id="@+id/stack"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_stack"
               android:layout_margin="10dp"/>


           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               android:src="@drawable/virus"
               android:layout_alignParentEnd="true"/>
           <ImageView
               android:id="@+id/search11"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/search"
               android:layout_alignParentEnd="true"
               android:layout_marginTop="10dp"
               android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="sans-serif-black"
                android:text="Stay At Home"
                android:textColor="#40bf00"
                android:textSize="30sp"
                android:textStyle="bold" />
           <TextView
               android:id="@+id/india"
               android:layout_width="130dp"
               android:layout_height="wrap_content"
               android:text="Covid-19 Stats \n India"
               android:textColor="#93006c"
               android:textSize="25sp"
               android:textStyle="bold"
               android:fontFamily="sans-serif-black"
               android:layout_marginLeft="5dp"
               android:layout_marginTop="35dp"/>
           <Button
               android:id="@+id/Explore"
               android:layout_width="150dp"
               android:layout_height="60dp"
               android:background="@drawable/btn"
               android:layout_alignParentBottom="true"
               android:layout_margin="20dp"
               android:text="World Stats"
               android:textAllCaps="false"
               android:textColor="@android:color/white"
               android:fontFamily="serif"
               android:textStyle="bold|italic"/>
       </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            android:elevation="10dp">

        <ScrollView
            android:id="@+id/scrool


"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
         >
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:elevation="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/TtlCases"
                    android:layout_width="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_run"
                    android:layout_height="wrap_content"
                    android:text="Total Cases"
                    android:layout_margin="10dp"
                    android:textColor="@android:color/background_dark"
                    android:fontFamily="serif"/>
                <TextView
                    android:id="@+id/ttlcases"
                    android:layout_below="@+id/TtlCases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark"
                    android:fontFamily="serif"/>
                    <ImageView
                        android:layout_below="@+id/TtlCases"
                        android:layout_toRightOf="@id/ttlcases"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_line"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_weight="1"
                android:layout_toRightOf="@id/card1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:elevation="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/Activetext"
                        android:layout_width="match_parent"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_run3"
                        android:layout_height="wrap_content"
                        android:text="Active Cases"
                        android:layout_margin="10dp"
                        android:textColor="@android:color/background_dark"
                        android:fontFamily="serif"/>
                    <TextView
                        android:id="@+id/cases1"
                        android:layout_below="@+id/Activetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_margin="5dp"
                        android:textColor="@android:color/background_dark"
                        android:fontFamily="serif"/>
                    <ImageView
                        android:layout_below="@+id/Activetext"
                        android:layout_toRightOf="@id/cases1"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_line3"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_below="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_weight="1"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:elevation="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/Deathstext"
                            android:layout_width="match_parent"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_run2"
                            android:layout_height="wrap_content"
                            android:text="Deaths"
                            android:layout_margin="10dp"
                            android:textColor="@android:color/background_dark"
                            android:fontFamily="serif"/>
                        <TextView
                            android:id="@+id/Deathsactive"
                            android:layout_below="@+id/Deathstext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="5dp"
                            android:textColor="@android:color/background_dark"
                            android:fontFamily="serif"/>
                        <ImageView
                            android:layout_below="@+id/Deathstext"
                            android:layout_toRightOf="@id/Deathsactive"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_line2"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_weight="1"
                    android:layout_toRightOf="@id/card1"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:elevation="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/Recoverestext"
                            android:layout_width="match_parent"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_run1"
                            android:layout_height="wrap_content"
                            android:text="Recovered"
                            android:layout_margin="10dp"
                            android:textColor="@android:color/background_dark"
                            android:fontFamily="serif"/>
                        <TextView
                            android:id="@+id/RecoveredActive"
                            android:layout_below="@+id/Recoverestext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_margin="5dp"
                            android:textColor="@android:color/background_dark"
                            android:fontFamily="serif"/>
                        <ImageView
                            android:layout_below="@+id/Recoverestext"
                            android:layout_toRightOf="@id/RecoveredActive"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_line1"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_below="@+id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card5"
                        android:layout_weight="1"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        android:elevation="8dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/dailytextdeath"
                                android:layout_width="match_parent"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/ic_run2"
                                android:layout_height="wrap_content"
                                android:text="Today Deaths"
                                android:layout_margin="10dp"
                                android:textColor="@android:color/background_dark"
                                android:fontFamily="serif"/>
                            <TextView
                                android:id="@+id/todaydeathsactive"
                                android:layout_below="@+id/dailytextdeath"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_margin="5dp"
                                android:textColor="@android:color/background_dark"
                                android:fontFamily="serif"/>
                            <ImageView
                                android:layout_below="@+id/dailytextdeath"
                                android:layout_toRightOf="@id/todaydeathsactive"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/ic_line2"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card6"
                        android:layout_weight="1"
                        android:layout_toRightOf="@id/card1"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        android:elevation="8dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/todayrecovered"
                                android:layout_width="match_parent"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/ic_run1"
                                android:layout_height="wrap_content"
                                android:text="Today Recovered"
                                android:layout_margin="10dp"
                                android:textColor="@android:color/background_dark"
                                android:fontFamily="serif"/>
                            <TextView
                                android:id="@+id/recoveredtodayactive"
                                android:layout_below="@+id/todayrecovered"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_margin="5dp"
                                android:textColor="@android:color/background_dark"
                                android:fontFamily="serif"/>
                            <ImageView
                                android:layout_below="@+id/todayrecovered"
                                android:layout_toRightOf="@id/recoveredtodayactive"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/ic_line1"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <ImageView
                    android:layout_below="@id/linear3"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/worldcorona"
                    android:layout_margin="20dp"/>
            </RelativeLayout>
        </ScrollView>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/states"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:src="@drawable/ic_india"
    android:background="@android:color/white"
    android:layout_margin="10dp"/>
</RelativeLayout>